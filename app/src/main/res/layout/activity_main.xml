<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost of service"
        android:textSize="25sp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/div_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:text="How was the service?"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <RadioGroup
        android:id="@+id/tip_options"
        android:layout_below="@+id/div_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/option_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amazing (20%)" />

        <RadioButton
            android:id="@+id/option_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good (18%)" />
        <RadioButton
            android:id="@+id/option_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok (15%)" />

    </RadioGroup>

    <Switch
        android:id="@+id/round_up_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_options"
        android:layout_alignParentRight="true"
        android:checked="false"
        android:text="Round up tip?"
        android:textSize="20sp" />

    <Button
        android:id="@+id/caculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caculate"
        android:padding="10dp"
        android:layout_below="@+id/round_up_switch"
        />

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caculate"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="Tip amount"
        android:textColor="@color/black"
        android:textSize="20sp" />


</RelativeLayout>